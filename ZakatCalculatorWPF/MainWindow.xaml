<Window x:Class="ZakatCalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zakat Calculator" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- for results -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Inputs -->
        <TextBlock Text="Cash:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="CashInput" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Gold:" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="GoldInput" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Silver:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="SilverInput" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Future Assets:" Grid.Row="3" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="FutureAssetsInput" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Investments:" Grid.Row="4" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="InvestmentsInput" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Borrowed Amount:" Grid.Row="5" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="BorrowedAmountInput" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Unpaid Wages:" Grid.Row="6" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="UnpaidWagesInput" Grid.Row="6" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Assets:" Grid.Row="7" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="AssetsInput" Grid.Row="7" Grid.Column="1" Margin="5"/>

        <!-- Button -->
        <Button Content="Calculate Zakat" Grid.Row="8" Grid.ColumnSpan="2"
                Margin="10" Height="40" Width="200"
                HorizontalAlignment="Center"
                Click="CalculateZakat_Click"/>

        <!-- ✅ Proper Result Section -->
        <StackPanel Grid.Row="9" Grid.ColumnSpan="2" Margin="10" HorizontalAlignment="Center">
            <TextBlock x:Name="ResultText" FontSize="16" FontWeight="Bold" Foreground="Green"/>
            <TextBlock x:Name="EligibilityText" FontSize="14" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>

